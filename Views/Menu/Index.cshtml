@model List<MenuFreeCodeCamp.Models.Dish>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
<div class="row">
    @foreach(var item in Model)
        {
            <div class="col-6 p-5 " >
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width:100%;height:400px; border-radius:20px" />
                </div>
                <div class="d-flex justify-content-center m-2">
                    <h5>$@item.price.ToString("N2") USD</h5>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">View Dish</a>
                </div>
            </div>
        }
    </div>
</div>
